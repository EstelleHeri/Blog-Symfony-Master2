<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Blog{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container">
                <a class="navbar-brand" href="{{ path('index') }}">Blog</a>

                {% if is_granted('ROLE_ADMIN') %}
                    <a class="buttonAdd" href="{{path('add_article')}}">Ajouter un article</a>

                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <span class="usernamespan">Estelle</span>
                {% endif %}

                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <a class="navbar-right" href="{{path('logout')}}">Se déconnecter</a>
                {% else %}
                    <a class="navbar-right" href="{{ path('connexion') }}">Connexion</a>
                {% endif %}
            </div>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}{% endblock %}
    </body>

    <footer class="footer">
        <div class="footer-copyright text-center py-3">© {{ "now"|date("Y") }} Copyright: Estelle HERIPRET</div>
    </footer>
</html>
